            {
              "module_title": "Module 1: Foundation & Setup",
              "activities": [
                {
                  "activity_name": "Basic Exchange Installation",
                  "description": "Perform the installation of Microsoft Exchange 2019 on a Windows Server 2019 virtual machine. Follow the step-by-step guide provided in the course material to ensure proper setup.",
                  "type": "hands_on",
                  "time_estimation": "2 hours",
                  "success_criteria": [
                    "Successfully installed Exchange 2019 with no errors",
                    "Verification of services running correctly"
                  ]
                },
                {
                  "activity_name": "PowerShell Scripting Basics",
                  "description": "Create a PowerShell script that automates the installation prerequisites for Exchange Server. The script should ensure Windows features are enabled and required roles are installed.",
                  "type": "code_challenge",
                  "time_estimation": "1 hour",
                  "success_criteria": [
                    "Script executes without errors",
                    "All prerequisites are installed correctly"
                  ]
                },
                {
                  "activity_name": "Environment Setup Verification",
                  "description": "Verify your Exchange environment setup using a provided checklist to confirm all services are running, and configurations are in place.",
                  "type": "hands_on",
                  "time_estimation": "30 mins",
                  "success_criteria": [
                    "Checklist is completed and signed off",
                    "No missing components in the installation"
                  ]
                }
              ]
            },
            {
              "module_title": "Module 2: Core Implementation",
              "activities": [
                {
                  "activity_name": "Mail Flow Configuration",
                  "description": "Set up mail flow by configuring send and receive connectors in Exchange. Test the configuration by sending and receiving a test email within your test environment.",
                  "type": "hands_on",
                  "time_estimation": "1 hour 30 mins",
                  "success_criteria": [
                    "Successfully configured mail flow",
                    "Test email is sent and received correctly"
                  ]
                },
                {
                  "activity_name": "User Mailbox Creation",
                  "description": "Create multiple user mailboxes and distribution groups using the Exchange Admin Center (EAC) and PowerShell. Verify mailbox accessibility.",
                  "type": "hands_on",
                  "time_estimation": "1 hour",
                  "success_criteria": [
                    "Mailboxes and groups created correctly",
                    "Users can access their mailboxes without issues"
                  ]
                },
                {
                  "activity_name": "Mid-term Project: Server Maintenance Tasks",
                  "description": "Perform routine server maintenance tasks covered in the module on your Exchange server setup. Document the steps and results.",
                  "type": "project",
                  "time_estimation": "2 hours",
                  "success_criteria": [
                    "Maintenance tasks are executed successfully",
                    "Documentation clearly outlines steps taken"
                  ]
                }
              ]
            },
            {
              "module_title": "Module 3: Capstone & Deployment",
              "activities": [
                {
                  "activity_name": "Capstone Project Planning & Setup",
                  "description": "Plan and set up the environment for your capstone project. Use Git & GitHub for version control to track changes and progress.",
                  "type": "project",
                  "time_estimation": "3 hours",
                  "success_criteria": [
                    "GitHub repository is set up and initialized",
                    "Environment setup is completed according to the capstone project needs"
                  ]
                },
                {
                  "activity_name": "Implementing Security Best Practices",
                  "description": "Apply security best practices to your Exchange server configuration, including setting up necessary permissions and security policies.",
                  "type": "hands_on",
                  "time_estimation": "1 hour 30 mins",
                  "success_criteria": [
                    "Security settings are correctly applied",
                    "System checks show improved security posture"
                  ]
                },
                {
                  "activity_name": "Exchange Backup and Recovery",
                  "description": "Conduct a full backup of your Exchange server. Perform a test recovery to ensure data integrity and availability.",
                  "type": "hands_on",
                  "time_estimation": "2 hours",
                  "success_criteria": [
                    "Successful backup is completed without errors",
                    "Test recovery verifies data integrity"
                  ]
                }
              ]
            }
          ]
